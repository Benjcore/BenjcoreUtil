<Project Sdk="Microsoft.NET.Sdk">
    
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>disable</ImplicitUsings>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
        <PackageId>BenjcoreUtil</PackageId>
        <Nullable>enable</Nullable>
        <Authors>Benj_2005</Authors>
        <Company>Benjcore</Company>
        <Version>2.0.3</Version>
        <AssemblyVersion>2.0.3</AssemblyVersion>
        <FileVersion>2.0.3.0</FileVersion>
        <Description>BenjcoreUtil - .NET Utility Library</Description>
        <Copyright>Copyright Â© Benj_2005 / Benjcore 2022</Copyright>
        <PackageLicenseUrl>https://github.com/Benjcore/BenjcoreUtil/blob/master/LICENSE</PackageLicenseUrl>
        <NoWarn>1591</NoWarn>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.3.1" />
    </ItemGroup>
    
    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>UnitTests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>
    
    <ItemGroup>
        <Compile Remove="UnitTests\**" />
        <Compile Remove="IntegrationTests\**" />
    </ItemGroup>
    
    <ItemGroup>
        <EmbeddedResource Remove="UnitTests\**" />
        <EmbeddedResource Remove="IntegrationTests\**" />
    </ItemGroup>
    
    <ItemGroup>
        <None Remove="UnitTests\**" />
        <None Remove="IntegrationTests\**" />
    </ItemGroup>

</Project>
